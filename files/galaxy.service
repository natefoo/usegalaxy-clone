[Unit]
Description=Galaxy Server
Documentation=https://docs.galaxyproject.org/
After=network.target

[Service]
Type=exec

User=galaxy
Group=galaxy

WorkingDirectory=/cvmfs/main.galaxyproject.org/galaxy
Environment=VIRTUAL_ENV=/cvmfs/main.galaxyproject.org/venv

ExecStart=/cvmfs/main.galaxyproject.org/venv/bin/uwsgi --yaml /galaxy/config/galaxy.yaml
ExecReload=/bin/kill -HUP $MAINPID
KillMode=mixed
KillSignal=SIGINT
 
[Install]
WantedBy=multi-user.target

